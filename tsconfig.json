{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "images/*": ["./src/assets/images/*"],
      "styles/*": ["./src/assets/styles/*"],
      "*": ["./src/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "./src/@types/**/*"]
  }
}
